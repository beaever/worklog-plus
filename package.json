{
  "name": "worklog-plus",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@worklog-plus/web",
    "dev:mobile": "turbo dev --filter=@worklog-plus/mobile",
    "dev:mobile:ios": "pnpm --filter @worklog-plus/mobile dev:ios",
    "dev:mobile:android": "pnpm --filter @worklog-plus/mobile dev:android",
    "storybook": "pnpm --filter @worklog-plus/storybook dev",
    "build": "turbo build",
    "build:web": "turbo build --filter=@worklog-plus/web",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "ci": "turbo typecheck lint build test",
    "prepare": "turbo typecheck"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.2",
      "@types/react-dom": "^19.0.2"
    }
  }
}
